<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Inventory"
             Title="Inventory">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Top button -->
        <Button Text="Add" Grid.Row="0" />

        <!-- CollectionView (optional) -->
        <CollectionView Grid.Row="1" ItemsSource="{Binding Tools}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Name}" TextColor="Red" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Scrollable listBox filling remaining space -->
        <ScrollView Grid.Row="2" BackgroundColor="DarkGray">
            <StackLayout x:Name="listBox">

                <!-- Add more labels to test scrolling -->
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
