<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiApp2"
             x:Class="MauiApp2.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <ResourceDictionary>
                <Color x:Key="NavBarBackgroundColor">#3B0000</Color>
                <Color x:Key="NavBarTextColor">White</Color>

                <Style TargetType="NavigationPage">
                    <Setter Property="BarBackgroundColor" Value="{StaticResource NavBarBackgroundColor}" />
                    <Setter Property="BarTextColor" Value="{StaticResource NavBarTextColor}" />
                </Style>

                <Style TargetType="Shell">
                    <Setter Property="NavBarHasShadow" Value="True" />
                    <Setter Property="Shell.NavBarIsVisible" Value="True" />
                </Style>
            </ResourceDictionary>


            <Style TargetType="Button" Class="Items">
                <Setter Property="MaximumHeightRequest" Value="300"></Setter>
                <Setter Property="MaximumWidthRequest" Value="1000"></Setter>
                <Setter Property="BackgroundColor" Value="WhiteSmoke"></Setter>
                <Setter Property="TextColor" Value="Black"></Setter>
                <Setter Property="Margin" Value="15,15,15,0"></Setter>
                <Setter Property="HeightRequest" Value="120"></Setter>
                <Setter Property="FontSize" Value="28"></Setter>
            </Style>


            <Style TargetType="Label" Class="toolName">
                <Setter Property="FontSize" Value="Large"></Setter>
                <Setter Property="FontFamily" Value="sans-serif"></Setter>
            </Style>

            <Style TargetType="VerticalStackLayout" Class="body">
                <Setter Property="BackgroundColor" Value="White"></Setter>
            </Style>

            <Style TargetType="Label" x:Key="NavBarTitleStyle">
                <Setter Property="FontFamily" Value="HighSchoolUsa" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="TextColor" Value="White" />
            </Style>

            <Style TargetType="Shell">
                <Setter Property="Shell.TitleColor" Value="White" />
                <Setter Property="Shell.ForegroundColor" Value="White" />
                <Setter Property="Shell.BackgroundColor" Value="#2B0000" />
            </Style>


        </ResourceDictionary>
    </Application.Resources>
</Application>
