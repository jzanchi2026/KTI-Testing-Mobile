<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="MauiApp2.Borrow"
             Title="Borrow"
             BackgroundColor="White">

    <ContentPage.Resources>
        <!-- Title Label Style -->
        <Style x:Key="TitleLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="TextColor" Value="#333333"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
        </Style>

        <!-- Barcode Result Label Style -->
        <Style x:Key="ResultLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="TextColor" Value="#222222"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

        <!-- Confirm Button Style -->
        <Style x:Key="ConfirmButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#00FF64"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="WidthRequest" Value="200"/>
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="Margin" Value="0,30,0,0"/>
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="CenterAndExpand">

        <!-- Title -->
        <Label Text="Align barcode here"
               Style="{StaticResource TitleLabelStyle}" />

        <!-- Camera View (unchanged) -->
        <Frame CornerRadius="10"
               HasShadow="True"
               BorderColor="#CCCCCC"
               HorizontalOptions="Center">
            <cv:CameraView 
                x:Name="cameraView"
                WidthRequest="350"
                HeightRequest="160"
                BarCodeDetectionEnabled="True"
                CamerasLoaded="cameraview_CamerasLoaded"
                BarcodeDetected="cameraView_BarcodeDetected"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </Frame>

        <!-- Barcode result -->
        <Label x:Name="barcodeResult"
               Style="{StaticResource ResultLabelStyle}" />

        <!-- Confirm Button -->
        <Button x:Name="Confirm"
                Text="Confirm"
                CommandParameter="{Binding Prefix}"
                Clicked="addToCartPage"
                Style="{StaticResource ConfirmButtonStyle}"
                IsVisible="False" />

    </VerticalStackLayout>
</ContentPage>
