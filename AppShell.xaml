<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp2"
    Shell.FlyoutBehavior="Flyout"

    Title="KT Metals Inventory"
    BackgroundColor="#2B0000"
    x:Name="MyAppShell">

    <ShellContent
    x:Name="MyMainPage"
    Title="Home"
    Icon="home_icon.png"
    ContentTemplate="{DataTemplate local:MainPage}"
    Route="MainPage" />

    <ShellContent
        x:Name="MyLoginPage"
        Title="Login"
        Shell.FlyoutBehavior="Disabled"
        ContentTemplate="{DataTemplate local:MauiLoginPage}"
        Route="MauiLoginPage"
        Shell.FlyoutItemIsVisible="False"
        Shell.TabBarIsVisible="False"
        />
    <ShellContent
         Title="Profile"
         Icon="prof_icon.png"
         ContentTemplate="{DataTemplate local:ProfilePage}"
         Route="ProfilePage" />
    
    <ShellContent
        Title="History"
        Icon="history_icon.png"
        ContentTemplate="{DataTemplate local:HistoryPage}"
        Route="HistoryPage" />
    <ShellContent
        Title="Cart"
        Icon="cart_icon.png"
        ContentTemplate="{DataTemplate local:CartPage}"
        Route="CartPage" />
    <ShellContent
        Title="Inventory"
        Icon="inv_icon.png"
        ContentTemplate="{DataTemplate local:Inventory}"
        Route="Inventory" />
    <ShellContent
        Title="Borrow Items"
        Icon="borrow_icon.png"
        ContentTemplate="{DataTemplate local:Borrow}"
        Route="Borrow" />
    <Shell.FlyoutFooter>
        <Grid Padding="20" BackgroundColor="White">
            <Button
                Text="Sign Out"
                Command="{Binding SignOutCommand}"
                BackgroundColor="#700000"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="45"
                FontAttributes="Bold"/>
        </Grid>
    </Shell.FlyoutFooter>

</Shell>