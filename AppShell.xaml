<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp2"
    Shell.FlyoutBehavior="Flyout"
    Title="KT Metals Inventory"
    BackgroundColor="DarkRed"
    x:Name="MyAppShell"
     >
    <ShellContent
    x:Name="MyMainPage"
    Title="Home"
    ContentTemplate="{DataTemplate local:MainPage}"
    Route="MainPage" />


    <ShellContent
        x:Name="MyLoginPage"
        Title="Login"
        Shell.FlyoutBehavior="Disabled"
        ContentTemplate="{DataTemplate local:MauiLoginPage}"
        Route="MauiLoginPage"
        Shell.FlyoutItemIsVisible="False"
        Shell.TabBarIsVisible="False"
        />
    <ShellContent
         Title="Profile"
         ContentTemplate="{DataTemplate local:ProfilePage}"
         Route="ProfilePage" />
    
    <ShellContent
        Title="history"
        ContentTemplate="{DataTemplate local:HistoryPage}"
        Route="HistoryPage" />
    <ShellContent
        Title="cart"
        ContentTemplate="{DataTemplate local:CartPage}"
        Route="CartPage" />
    <ShellContent
        Title="Inventory"
        ContentTemplate="{DataTemplate local:Inventory}"
        Route="Inventory" />
    <ShellContent
        Title="Borrow Items"
        ContentTemplate="{DataTemplate local:Borrow}"
        Route="Borrow" />
    <Shell.FlyoutFooter>
        <StackLayout>
            <Button Text="Sign Out" Command ="{Binding SignOutCommand}" BackgroundColor="DarkRed"></Button>
        </StackLayout>
    </Shell.FlyoutFooter>

</Shell>