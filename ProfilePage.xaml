<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.ProfilePage"
             Title="Profile"
             BackgroundColor="#F5F6FA">

    <Grid Padding="20">

        <VerticalStackLayout
            Spacing="22"
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <!-- Profile Card -->
            <Frame
                BackgroundColor="White"
                CornerRadius="20"
                Padding="25"
                HasShadow="True"
                WidthRequest="350">

                <VerticalStackLayout Spacing="18"
                                     HorizontalOptions="Center">

                    <!-- Circular Profile Image -->
                    <Frame Padding="0"
                           CornerRadius="80"
                           HeightRequest="150"
                           WidthRequest="150"
                           HasShadow="False"
                           BackgroundColor="#EEEEEE">

                        <Image Source="anger.png"
                               Aspect="AspectFill"
                               Clip="EllipseGeometry Center='75,75' RadiusX='75' RadiusY='75'" />
                    </Frame>

                    <!-- User Name -->
                    <Label Text="{Binding na}"
                           FontAttributes="Bold"
                           FontSize="26"
                           HorizontalTextAlignment="Center"
                           TextColor="#1E1E1E" />

                    <!-- Email -->
                    <Label Text="{Binding em}"
                           FontSize="16"
                           HorizontalTextAlignment="Center"
                           TextColor="#777" />

                    <!-- Divider -->
                    <BoxView HeightRequest="1" WidthRequest="200" Color="#DDD" />

                    <!-- Buttons -->
                    <VerticalStackLayout Spacing="12" WidthRequest="200">

                        <Button Text="Edit Profile"
                                BackgroundColor="#4A90E2"
                                TextColor="White"
                                CornerRadius="10"
                                HeightRequest="45" />

                        <Button Text="Log Out"
                                BackgroundColor="#E24A4A"
                                TextColor="White"
                                CornerRadius="10"
                                HeightRequest="45"
                                Command ="{Binding SignOutCommand}"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>

    </Grid>
</ContentPage>
