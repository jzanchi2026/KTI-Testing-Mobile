<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiApp2.HistoryPage"
    BackgroundColor="#121212">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <Label
            Grid.Row="0"
            Text="History"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            TextColor="White"
            Margin="0,20"/>

        <!-- History List -->
        <CollectionView
            x:Name="HistoryCollection"
            Grid.Row="1"
            ItemsSource="{Binding Items}"
            Margin="10">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        BackgroundColor="#1E1E1E"
                        CornerRadius="12"
                        Padding="12"
                        Margin="0,6"
                        HasShadow="True">

                        <VerticalStackLayout Spacing="6">

                            <Label
                                Text="{Binding ToolName}"
                                FontSize="18"
                                FontAttributes="Bold"
                                TextColor="White"/>

                            <Label
                                Text="{Binding CheckoutText}"
                                FontSize="14"
                                TextColor="#BBBBBB"/>

                            <Label
                                Text="{Binding ReturnText}"
                                FontSize="14"
                                TextColor="{Binding ReturnColor}"/>

                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Bottom Button -->
        <Button
            Grid.Row="2"
            Text="Profile"
            Clicked="ProfileButton_Clicked"
            BackgroundColor="#FFCA26"
            TextColor="Black"
            Margin="20"
            HeightRequest="50"
            CornerRadius="12"/>

    </Grid>
</ContentPage>
