<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MaterialInfo"
             x:Name="MatInfoPage"
             BackgroundColor="#2B0000">

    <Shell.TitleView>
        <Grid Padding="10,0" BackgroundColor="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <HorizontalStackLayout Spacing="8" VerticalOptions="Center" Grid.Column="2">
                <!-- App Text -->
                <Label Text="INFORMATION"
                    FontSize="18"
                    FontFamily="OpenSansRegular"
                    FontAttributes="Bold"
                    TextColor="White"
                    VerticalOptions="Center"/>
                
                <Label Text="KTI"
                    FontSize="22"
                    FontFamily="HighSchoolUsa"
                    FontAttributes="Bold"
                    TextColor="White"
                    VerticalOptions="Center"/>

                
                <ImageButton Source="applogo.png"
                            HeightRequest="24"
                            WidthRequest="24"
                            BackgroundColor="Transparent"/>
            </HorizontalStackLayout>
        </Grid>
    </Shell.TitleView>

    <Grid RowSpacing="0">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>       
        </Grid.RowDefinitions>

    <!-- Background image -->
    <Image Source="loginbg.png"
            Aspect="AspectFill"
            Grid.RowSpan="3"
            Opacity="0.55" />

    <!-- MAIN CARD CONTAINER -->
    <Border
        Background="White"
        Padding="25"
        Margin="40, 20"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        StrokeShape="RoundRectangle 25"
        WidthRequest="340"
        MaximumWidthRequest="340">

            <VerticalStackLayout 
                Spacing="18" 
                Margin="20, 0" 
                HorizontalOptions="Center" 
                WidthRequest="290">

            <!-- IMAGE WRAPPER -->
            <Border  
                Background="#7C3F3F"
                StrokeThickness="0"
                Padding="20"
                HeightRequest="230"
                StrokeShape="RoundRectangle 20">

                <Image 
                    x:Name="matImage"
                    Source="wires_cutter.png"
                    Aspect="AspectFit"
                    
                    VerticalOptions="Center"
                    HorizontalOptions="Center"/>
            </Border>

            <!-- TOOL NAME -->
            <Label 
                x:Name="mainText"
                Text="TOOL NAME"
                HorizontalTextAlignment="Center"
                FontFamily="HighSchoolUsa"
                TextTransform="Uppercase"
                FontSize="28"
                TextColor="#3B0000"
                LineBreakMode="TailTruncation"
                MaxLines="2" 
                HorizontalOptions="Center" />

            <!-- AVAILABILITY -->
            <Label 
                x:Name="availableCount"
                Text="X available"
                FontSize="16"
                TextColor="#555"
                HorizontalOptions="Center" />

            <!-- SHORT DESCRIPTION -->
            <Label 
                x:Name="descriptionLabel"
                Text="This material is part of the Keefe Tech Inventory System!"
                FontSize="16"
                FontFamily="OpenSansSemiBold"
                TextColor="#FF652323"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center" />

            <!-- QUANTITY SELECTOR -->
            <Border
                Stroke="#3B0000"
                StrokeThickness="2"
                BackgroundColor="White"
                HorizontalOptions="Fill"
                HeightRequest="50"
                StrokeShape="RoundRectangle 15">

                <Grid ColumnDefinitions="*, Auto, *">

                    <!-- Minus Button -->
                    <Button 
                        Grid.Column="0"
                        Text="−"
                        FontSize="28"
                        BackgroundColor="#AE6F6F"
                        TextColor="White"
                        CornerRadius="0"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill"
                        Clicked="OnDecrementClicked" />

                    <!-- Quantity Display -->
                    <Grid 
                        Grid.Column="1"
                        WidthRequest="120"
                        BackgroundColor="White"
                        VerticalOptions="Center"
                        HorizontalOptions="Center">

                        <Label 
                            x:Name="quantityLabel"
                            Text="1"
                            FontSize="24"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            TextColor="#3B0000"/>
                    </Grid>

                    <!-- Plus Button -->
                    <Button 
                        Grid.Column="2"
                        Text="＋"
                        FontSize="28"
                        BackgroundColor="#AE6F6F"
                        TextColor="White"
                        CornerRadius="0"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill"
                        Clicked="OnIncrementClicked" />

                </Grid>

            </Border>



            <!-- CHECKOUT BUTTON -->
                x:Name="Checkout"
                Text="SCAN &amp; CHECKOUT"
                FontFamily="OpenSansSemiBold"
                FontSize="20"
                BackgroundColor="#3B0000"
                TextColor="White"
                CornerRadius="15"
                HeightRequest="55"
                Clicked="OnScanCheckoutClicked"
                Margin="0,10,0,0"
                HorizontalOptions="Fill" />

            <!-- RETURN BUTTON (Optional) -->
            <Button 
                x:Name="Return"
                Text="RETURN"
                FontFamily="OpenSansSemiBold"
                FontSize="20"
                BackgroundColor="#B44444"
                TextColor="White"
                CornerRadius="15"
                HeightRequest="55"
                Clicked="OnReturnClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>

    </Border>
    </Grid>
</ContentPage>
